# Citatum FastAPI Service - Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME=Citatum
APP_VERSION=0.1.0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=pgvector

# Options: chroma, pinecone, weaviate, qdrant, pgvector
POSTGRES_USER=ur_username
POSTGRES_PASSWORD=ur_password
POSTGRES_DB=ur_db_name
POSTGRES_PORT=port
VECTOR_DB_PATH=db_location
VECTOR_DB_HOST=localhost


# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# LLM Configuration
LLM_PROVIDER=openai
# Options: openai, anthropic, cohere
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=*
# For production, use specific origins: CORS_ORIGINS=http://localhost:3000,https://example.com
# File upload configuration
FILE_ALLOWED_TYPES=application/pdf,text/plain
FILE_MAX_SIZE_MB=100